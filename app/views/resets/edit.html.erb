<% content_for :head do %>
  <%= stylesheet_link_tag "users"  %>
<% end %>

<div class="login">
  <div class="account-container login stacked">

    <div class="content clearfix">

      <h1>Reset Password</h1>            

      <div class="login-fields">
        <%= render 'shared/error_messages'  %>
        <%= form_for @user, :url => reset_path(params[:id]) do |f| %>
          <div class="field">
            <%= f.password_field(:password, placeholder: "password", class: "login password-field")  %>
          </div>

          <div class="field">
            <%= f.password_field(:password_confirmation, placeholder: "retype password", class: "login password-field")  %>
          </div>

          <div>
            <%= f.submit("Reset password", class: "", class: "button btn btn-large") %>   
          </div>
        <% end %>


      </div> <!-- /content -->

    </div> <!-- /account-container -->


    <!-- Text Under Box -->
    <div class="login-extra">
      New User? <a href="<%= signup_path %>">Create Account</a><br />
      Forgot Password? <a href="<%= forgot_path %>">Reset</a>
    </div> <!-- /login-extra -->

  </div>
</div>
