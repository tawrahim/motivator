<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h3>
        <%= gravatar_for(@user) %>
        <%= @user.name %>
      </h3>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
</div>
<div class="span8">
   <%= render 'follow_form' if signed_in?  %>
   <% if @user.goals.any?  %>
     <h3>Goals (<%= @user.goals.count %>)</h3>
   <% end %>
   <ol class="goals">
     <%= render @user.goals %>
   </ol>
</div>
